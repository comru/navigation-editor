<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.navigationeditor.web.customer.CustomerEdit"
        datasource="customerDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.navigationeditor.web.customer">
    <dsContext>
        <datasource id="customerDs"
                    class="com.company.navigationeditor.entity.Customer"
                    view="customer-view">
            <datasource id="addressDs"
                        property="address"/>
            <collectionDatasource id="ordersDs"
                                  property="orders"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <hbox id="goToBox" spacing="true" visible="false">
            <label value="msg://goTo" align="MIDDLE_CENTER"/>
            <lookupField id="goToField" nullOptionVisible="false" filterMode="CONTAINS" width="250px"/>
        </hbox>
        <fieldGroup id="fieldGroup"
                    datasource="customerDs">
            <column width="250px">
                <field id="name"/>
                <field id="status"/>
                <field id="city"
                       datasource="addressDs"/>
                <field id="country"
                       datasource="addressDs"/>
                <field id="user"/>
            </column>
        </fieldGroup>
        <groupBox id="ordersBox"
                  caption="msg://com.company.navigationeditor.entity/Customer.orders">
            <table id="ordersTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="create"
                            openType="DIALOG"/>
                    <action id="edit"
                            openType="DIALOG"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                    <column id="num"/>
                </columns>
                <rows datasource="ordersDs"/>
                <buttonsPanel>
                    <button action="ordersTable.create"/>
                    <button action="ordersTable.edit"/>
                    <button action="ordersTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
